<div class="contents-title text-center" style="padding-top: 3rem">
<p>
  <h5>グループ名:<%= Group.find(@answer.group_id).name %></h5>
</p>

  <h4><%= Quiz.find(@answer.quiz_id).title %></h4>
  <%= image_tag Quiz.find(@answer.quiz_id).image.url, :size =>'700x500' %>

<p>
  <h5>解答者<%= User.find(@answer.user_id).name %>さん</h5>
</p>

<p>
  <h4>解答<%= @answer.select_answer %></h4>
</p>

<% if @favorite.present? %>
  <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
<% else %>
  <%= link_to 'お気に入りする', favorites_path(answer_id: @answer.id), method: :post, class: 'btn btn-primary' %>
<% end %>

<%= link_to '編集', edit_answer_path(@answer) %> |
<%= link_to '一覧へもどる', answers_path %>
</div>