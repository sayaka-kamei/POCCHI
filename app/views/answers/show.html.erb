<p>
  <strong>グループ名:</strong>
  <td><%= Group.find(@answer.group_id).name %></td>
</p>

  <h1><%= Quiz.find(@answer.quiz_id).title %></h1>
  <%= image_tag Quiz.find(@answer.quiz_id).image.url %>

<p>
  <strong>解答者</strong>
  <%= User.find(@answer.user_id).name %>さん
</p>

<p>
  <strong>解答</strong>
  <%= @answer.select_answer %>
</p>

<% if @favorite.present? %>
  <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
<% else %>
  <%= link_to 'お気に入りする', favorites_path(answer_id: @answer.id), method: :post, class: 'btn btn-primary' %>
<% end %>

<%= link_to '編集', edit_answer_path(@answer) %> |
<%= link_to '一覧へもどる', answers_path %>
