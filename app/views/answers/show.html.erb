<p>
  <strong>グループ名:</strong>
  <td><%= Group.find(@answer.group_id).name %></td>
</p>

<h2>本日の質問</h2>
  <%= Quiz.find(@answer.quiz_id).title %>
  <%= image_tag Quiz.find(@answer.quiz_id).image.url %>

<p>
  <strong>Name:</strong>
  <%= User.find(@answer.user_id).name %>さん
</p>

<p>
  <strong>Answer:</strong>
  <%= @answer.select_answer %>
</p>

<% unless @answer.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(answer_id: @answer.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_answer_path(@answer) %> |
<%= link_to 'Back', answers_path %>
