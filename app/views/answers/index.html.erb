<h1>みんなのPOCCHI</h1>

<table>
  <thead>
    <tr>
      <%= search_form_for @q do |f| %>
        <th><%= f.search_field :group_name_cont, placeholder: "検索　グループ名" %></th>
        <th><%= f.search_field :quiz_title_cont, placeholder: "検索　元気" %></th>
        <th><%= f.submit "検索" %></th>
        <th><%= link_to "一覧を表示", answers_path %></th>
      <% end %>
    </tr>  
  
    <tr>
      <th>グループ名</th>
      <th>POCCHI質問</th>
      <th>解答者</th>
      <th>解答</th>
      <th>解答した日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= Group.find(answer.group_id).name %></td>
        <td><%= Quiz.find(answer.quiz_id).title %></td>
        <td><%= User.find(answer.user_id).name %>さん</td>
        <td><%= answer.select_answer %></td>
        <td><%= l answer.created_at, format: :short  %></td>
        <td><%= link_to '詳細', answer %></td>
        <td><%= link_to '編集', edit_answer_path(answer) %></td>
        <td><%= link_to '削除', answer, method: :delete, data: { confirm: '削除して良いですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '今日のPOCCHI', new_answer_path %>
