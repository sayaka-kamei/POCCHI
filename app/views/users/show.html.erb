<h2>ユーザー情報</h2>
<hr />

<p>
    <strong>ユーザー名</strong>
    <%= @user.name %>
</p>
<p>
    <strong>性別</strong>
    <%= @user.gender %>
</p>
<p>
    西暦<%= @user.age %>年生まれ
</p>
<p>
    <strong>Eメール</strong>
    <%= @user.email %>
</p>

<% if current_user.groups.first.present? %>
<p>
    <strong>グループ名</strong>
    <% current_user.groups.each do |group| %>
        <%= group.name %>
    <% end %>
</p>

<% else %>
<%= link_to "グループに所属する", new_group_path%><br>
<% end %>