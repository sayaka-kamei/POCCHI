<h1>４択問題一覧</h1>

<table>
  <thead>
    <tr>
      <th>問題文</th>
      <th>作成日</th>
      <th>出題予定日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td><%= quiz.created_at %></td>
        <td><%= quiz.request_answer_on %></td>
        <td><%= link_to '詳細', quiz %></td>
        <td><%= link_to '編集', edit_quiz_path(quiz) %></td>
        <td><%= link_to '削除', quiz, method: :delete, data: { confirm: '削除して良いですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '４択問題を新規作成する', new_quiz_path %>
