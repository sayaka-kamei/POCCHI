<h1>グループ一覧</h1>

<table>
  <thead>
    <tr>
      <th>グループ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to '詳細', group %></td>
        <td><%= link_to '編集', edit_group_path(group) %></td>
        <td><%= link_to '削除', group, method: :delete, data: { confirm: '削除して良いですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
